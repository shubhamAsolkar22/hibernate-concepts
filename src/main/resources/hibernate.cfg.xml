<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
 
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate-concepts?createDatabaseIfNotExist=true</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="com.fkog.intro.UserDetails"/>
        <mapping class="com.fkog.primaryKeys.UserDetails2"/>
        <mapping class="com.fkog.embeddingObjects.UserDetails3"/>
        <mapping class="com.fkog.attributeOverrides.UserDetails4"/>
    </session-factory>
</hibernate-configuration>